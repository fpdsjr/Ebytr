{
  "openapi": "3.0.0",
  "info": {
    "title": "Projete Api",
    "description": "Tasks manager api",
    "contact": {
      "email": "flaviopds.jr@gmail.com"
    },
    "version": "1.0"
  },
  "paths": {
    "/tasks/create": {
      "post": {
        "summary": "Create a new Task",
        "description": "Will be responsible for registering a new task",
        "tags": ["Tasks"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "description": {
                    "type": "string"
                  }
                }
              },
              "examples": {
                "task": {
                  "value": {
                    "description": "Go to the market to buy groceries"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "application/json":{
                "schema":{
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "Created"
                    }
                  }
                },
                "examples": {
                  "task": {
                    "value":{
                      "id": "1222deaf-fe2e-444d-8e97-56ed98f254a3",
                      "description": "Go to the market to buy groceries",
                      "status": "PENDING"
                    }
                  }
                }
              }
            }
          }
        }
      
      }
    },
    "/tasks/delete/{id}": {
      "delete": {
        "summary": "Delete a existent task",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "schema": {
              "type": "string"
            },
            "required": true,
            "description": "task id"
          }
        ],
        "description": "Will be responsible to delete a task",
        "tags": ["Tasks"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "description": {
                    "type":"string"
                  }
                }
              },
              "examples": {
                "task": {
                  "value": {
                    "description": "Go to the gym"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Deleted",
            "content": {
              "application/json": {
                "schema": {
                  "type":"object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "description": "Task Deleted"
                    }
                  }
                },
                "examples": {
                  "task": {
                    "value":{
                      "message": "Task Deleted"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Task do not exists!"
          }
        }
      }
    }
  }

}